{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "clean current project"
        },
        {
            "type": "shell",
            "label": "make",
            "command": "make",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "detail": "Build using local Makefile"
        },
        {
            "type": "process",
            "label": "Tower",
            "command": "/Applications/Tower.app/Contents/MacOS/gittower",
            "args": [
                "${workspaceFolder}"
            ],
            "group": "none",
            "detail": "open Tower git GUI.",
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "hopper",
            "command": "hopperv4",
            "args": [
                "-a",
                "-l", "Mach-O",
                "--aarch64",
                "-e","${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "none",
            "detail": "open Hopper Disassembler",
            "problemMatcher": []
        }
    ]
}