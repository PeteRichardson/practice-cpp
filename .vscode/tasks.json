{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "cmake",
            "args": [
                "--build",
                "${fileDirname}/build",
                "-j",
                "8"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "detail": "Build using cmake"
        },
        {
            "type": "shell",
            "label": "config",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja",
                "-S",
                "${fileDirname}",
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "config current project"
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "cmake",
            "args": [
                "--build",
                "${fileDirname}/build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "clean current project"
        },
        {
            "type": "shell",
            "label": "new project",
            "command": "bin/newproject ${input:projectName}",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "create new cpp project",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "projectName",
            "description": "New Project Name?",
            "type": "promptString",
        }
    ]
}